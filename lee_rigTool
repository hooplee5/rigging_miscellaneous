import maya.cmds as cmds

# 定义按钮尺寸
button_w = 115
button_h = 44

def create_skin_window():
    # 检查窗口是否已存在，如果存在则删除
    if cmds.window("skinWindow", exists=True):
        cmds.deleteUI("skinWindow")
    
    # 创建主窗口
    window = cmds.window("skinWindow", title="皮肤工具")
    
    # 创建主布局
    main_layout = cmds.columnLayout(adjustableColumn=True)
    
    # 创建Skin按钮
    skin_button = cmds.button(label="Skin", command=lambda x: toggle_skin_buttons(), height=button_h, width=button_w/3)
    
    # 创建横向布局用于放置子按钮
    button_row = cmds.rowLayout(numberOfColumns=3, columnAttach=[(1, 'both', 0), (2, 'both', 0), (3, 'both', 0)], columnWidth=[(1, button_w), (2, button_w), (3, button_w)])
    
    # 创建三个子按钮
    global skin_button1, skin_button2, skin_button3
    skin_button1 = cmds.button(label="皮肤工具1", command=lambda x: print("皮肤工具1被点击"), width=button_w, height=button_h, parent=button_row)
    skin_button2 = cmds.button(label="皮肤工具2", command=lambda x: print("皮肤工具2被点击"), width=button_w, height=button_h, parent=button_row)
    skin_button3 = cmds.button(label="皮肤工具3", command=lambda x: print("皮肤工具3被点击"), width=button_w, height=button_h, parent=button_row)
    
    # 返回到主布局
    cmds.setParent('..')
    
    # 显示窗口
    cmds.showWindow(window)

# 运行创建窗口的函数
create_skin_window()